<div class="uk-container">
    <div class="uk-grid" uk-grid>
        <div class="uk-width-2-3@m uk-width-1-1">
            <!-- PROFILE -->
            <div class="profile-card-wrapper">
                <div class="uk-card uk-card-default">
                    <div class="uk-card-header">
                        <div class="uk-grid-small uk-flex-middle" uk-grid>
                            <div class="uk-width-auto">
                                <img class="uk-border-circle" width="40" height="40" src="{{ ( attribute(user, 'photo') is defined and user.photo ) ? asset(uploaded_asset(user.photoPath))|imagine_filter('squared_thumbnail_small') : asset('build/images/avatar.png') }}">
                            </div>
                            <div class="uk-width-expand">
                                <h3 class="uk-card-title uk-margin-remove-bottom">{{ user.getFullName }}</h3>
                                <p class="uk-text-meta uk-margin-remove-top">
                                    Site Administrator
                                </p>
                            </div>
                            <div class="uk-width-auto">
                                <div class="uk-align-right">
                                    <a href="{{ path('profile_edit', {'id': user.id}) }}">
                                        <span class="uk-margin-small-right" uk-icon="icon: file-edit; ratio: 1"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br /><br />

            <!-- Manage Users -->
            <div class="quick-links-wrapper">
                <div class="uk-card uk-card-default">
                    <div class="uk-card-header">
                        <div class="uk-grid-small uk-flex-middle" uk-grid>
                            <div class="uk-width-expand@s uk-width-1-1">
                                <h3 class="uk-card-title uk-margin-remove-bottom">Manage Users</h3>
                            </div>
                            <div class="uk-width-auto@s uk-width-1-1">
                                <div class="uk-align-right@s">
                                    <a href="{{ path('state_coordinator_new') }}" class="uk-button uk-button-primary uk-button-small">Create State Coordinator</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="uk-card-body">
                        <ul class="uk-list uk-list-divider">
                            <li>
                                <a href="{{ path('manage_state_coordinators') }}">State Coordinators</a>
                            </li>
                            <li>
                                <a href="{{ path('manage_regional_coordinators') }}">Regional Coordinator</a>
                            </li>
                            <li>
                                <a href="{{ path('manage_school_administrators') }}">School Site Administrators</a>
                            </li>
                            <li>
                                <a href="{{ path('manage_students') }}">Students</a>
                            </li>
                            <li>
                                <a href="{{ path('manage_educators') }}">Educators</a>
                            </li>
                            <li>
                                <a href="{{ path('manage_professionals') }}">Professionals</a>
                            </li>
                            <li>
                                <a href="{{ path('manage_companies') }}">Companies</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-width-1-3@m uk-width-1-1">
            <!-- Current Site -->
            <div class="quick-links-wrapper">
                <div class="uk-card uk-card-default">
                    <div class="uk-card-header">
                        <h3 class="uk-card-title uk-margin-remove-bottom">My Domain</h3>
                        <p class="uk-text-meta uk-margin-remove-top">
                            {{ get_site().baseUrl }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
