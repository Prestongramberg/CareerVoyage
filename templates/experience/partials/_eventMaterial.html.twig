<div class="uk-section-default uk-margin-large-top">
    <h2 class="uk-text-center">Event Material</h2>

    <div uk-filter="target: .js-filter">

        <ul class="uk-subnav uk-subnav-pill">
            <li class="uk-active" uk-filter-control><a href="#">All</a></li>
            <li uk-filter-control=".tag-downloads"><a href="#">Downloads</a></li>
            <li uk-filter-control=".tag-resources"><a href="#">Resources</a></li>
        </ul>

        <ul class="js-filter uk-child-width-1-2 uk-child-width-1-3@m uk-text-center" uk-grid>

            {% for experienceResource in experience.experienceResources %}

                <li class="{{ experienceResource.fileName ? 'tag-downloads' : 'tag-resources' }}">

                    <div class="uk-card uk-card-hover uk-card-body {{ experienceResource.fileName ? 'uk-card-primary' : 'uk-card-default' }}">
                        <h3 class="uk-card-title">{{ experienceResource.title }}</h3>
                        <p>{{ experienceResource.description }}</p>

                        {% if experienceResource.fileName %}
                            <a href="{{ asset(uploaded_asset(experienceResource.path)) }}"
                               class="uk-button uk-button-default uk-button-small view" download>Download</a>
                        {% else %}
                            <a href="{{ experienceResource.linkToWebsite }}"
                               class="uk-button uk-button-default uk-button-small view"
                               target="_blank view">Go To Resource</a>
                        {% endif %}

                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>