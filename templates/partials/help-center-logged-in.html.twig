<div id="offcanvas-help" uk-offcanvas="flip: true; bg-close: false">
    <div class="uk-offcanvas-bar">
        <button class="uk-offcanvas-close" type="button" uk-close></button>
        <h3>Help Center</h3>
        <p>Having trouble?  We have put together some walkthrough videos to help!</p>

        <ul uk-accordion>
            <li class="uk-open">
                <a class="uk-accordion-title" href="#">Completing your Profile</a>
                <div class="uk-accordion-content uk-video">
                    <div style="position: relative; padding-bottom: 62.5%; height: 0;"><iframe src="https://www.loom.com/embed/eb88a1d5c7eb41ea831c6dc6bf889f2a" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></iframe></div>
                </div>
            </li>
            {% if user.isSchoolAdministrator or user.isEducator %}
                {% include 'partials/users/school-admins-educators-shared.html.twig' %}
            {% endif %}

            {% if user.isProfessional %}
                {% include 'partials/users/professionals.html.twig' %}
            {% elseif user.isSchoolAdministrator %}
                {% include 'partials/users/school-administrators.html.twig' %}
            {% elseif user.isEducator %}
                {% include 'partials/users/educators.html.twig' %}
            {% elseif user.isStudent %}
                {% include 'partials/users/students.html.twig' %}
            {% endif %}
        </ul>
    </div>
</div>

<div class="knowledge-base uk-flex uk-flex-middle uk-flex-center">
    <span uk-toggle="target: #offcanvas-help">
        <i class="fa fa-question" aria-hidden="true"></i>
    </span>
</div>
