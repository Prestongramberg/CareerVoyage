<div id="offcanvas-help" uk-offcanvas="flip: true; bg-close: false">
    <div class="uk-offcanvas-bar">
        <button class="uk-offcanvas-close" type="button" uk-close></button>
        <h3>Help Center</h3>
        <p>Having trouble?  We have put together some walkthrough videos to help!</p>

        <ul uk-accordion>
            {% if defaultHelpVideos|length > 0 %}
                {% for video in defaultHelpVideos %}
                    <li>
                        <a class="uk-accordion-title load-help-video" href="#" data-id="{{ video.id }}" data-video="{{ video.videoId }}">{{ video.name }}</a>
                        <div class="uk-accordion-content uk-video">
                            <div style="position: relative; padding-bottom: 62.5%; height: 0;" id="video_{{ video.id }}"></div>
                        </div>
                    </li>
                {% endfor %}
            {% endif %}

            {% if userHelpVideos[user.getClassName] is defined and userHelpVideos[user.getClassName]|length > 0 %}
                {% for video in userHelpVideos[user.getClassName] %}
                    <li>
                        <a class="uk-accordion-title load-help-video" href="#" data-id="{{ video.id }}" data-video="{{ video.videoId }}">{{ video.name }}</a>
                        <div class="uk-accordion-content uk-video">
                            <div style="position: relative; padding-bottom: 62.5%; height: 0;" id="video_{{ video.id }}"></div>
                        </div>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
</div>

<div class="knowledge-base uk-flex uk-flex-middle uk-flex-center">
    <span uk-toggle="target: #offcanvas-help">
        <i class="fa fa-question" aria-hidden="true"></i>
    </span>
</div>