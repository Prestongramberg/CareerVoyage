{% extends 'baseAuthenticated.html.twig' %}

{% form_theme form _self %}

{% block title %}Edit Profile{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% if user.isEducator %}
        <script src="{{ asset('build/educator_profile.js') }}"></script>
    {% else %}
        <script src="{{ asset('build/profile.js') }}"></script>
    {% endif %}

{% endblock %}

 {% block stylesheets %}
     {{ parent() }}
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.css"
           integrity="sha256-e47xOkXs1JXFbjjpoRr1/LhVcqSzRmGmPqsrUQeVs+g=" crossorigin="anonymous"/>
 {% endblock %}


{% block body %}

    {% if user.isAdmin %}
        {% include 'profile/partials/_edit_admin_profile_form.html.twig' %}
    {% elseif user.isSiteAdmin %}
        {% include 'profile/partials/_edit_site_admin_profile_form.html.twig' %}
    {% elseif user.isProfessional %}
        {% include 'profile/partials/_edit_professional_profile_form.html.twig' %}
    {% elseif user.isEducator %}
        {% include 'profile/partials/_edit_educator_profile_form.html.twig' %}
    {% elseif user.isStudent %}
        {% include 'profile/partials/_edit_student_profile_form.html.twig' %}
    {% elseif user.isStateCoordinator %}
        {% include 'profile/partials/_edit_state_coordinator_profile_form.html.twig' %}
    {% elseif user.isRegionalCoordinator %}
        {% include 'profile/partials/_edit_regional_coordinator_profile_form.html.twig' %}
    {% elseif user.isSchoolAdministrator %}
        {% include 'profile/partials/_edit_school_administrator_profile_form.html.twig' %}
    {% endif %}

{% endblock %}
