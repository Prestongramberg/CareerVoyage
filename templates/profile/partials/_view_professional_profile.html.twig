<div class="uk-container">

    {% if user.id == profileUser.id %}
        <div class="uk-alert uk-margin" uk-alert>
            <a class="uk-alert-close" uk-close></a>
            <p>You are viewing your own profile as others see you.  <a href="{{ path('profile_edit', {'id': user.id}) }}">Edit your profile</a></p>
        </div>
    {% endif %}

    <div class="uk-grid" uk-grid>
        <div class="uk-width-2-3@m uk-width-1-1">
            <!-- PROFILE -->
            <div class="profile-card-wrapper">
                <div class="uk-card uk-card-default">
                    <div class="uk-card-header">
                        <div class="uk-grid-small uk-flex-middle" uk-grid>
                            <div class="uk-width-auto">
                                <img class="uk-border-circle" width="40" height="40" src="{{ ( attribute(profileUser, 'photo') is defined and profileUser.photo ) ? asset(uploaded_asset(profileUser.photoPath))|imagine_filter('squared_thumbnail_small') : asset('build/images/avatar.png') }}">
                            </div>
                            <div class="uk-width-expand">
                                <h3 class="uk-card-title uk-margin-remove-bottom">{{ profileUser.getFullName }}</h3>
                                <p class="uk-text-meta uk-margin-remove-top">
                                    <span>{{ profileUser.company is defined ? profileUser.company.name : "Professional" }}</span>
                                    {% if profileUser.primaryIndustry %}
                                        <span>- {{ profileUser.primaryIndustry.name }}</span>
                                    {% endif %}
                                    {% if profileUser.secondaryIndustries|length > 0 %}
                                        <span>- {{ profileUser.secondaryIndustries[0].name }}</span>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="uk-card-body">
                        {% if profileUser.briefBio %}
                            <div class="uk-margin">
                                {{ profileUser.briefBio|raw }}
                            </div>
                        {% else %}
                            <p>This user has not added a bio yet.</p>
                        {% endif %}
                        <div class="professional-links">
                            {% if profileUser.emailAfterPrivacySettingsApplied %}
                                <a href="mailto:{{ profileUser.emailAfterPrivacySettingsApplied }}" class="uk-icon-button uk-margin-small-right" uk-icon="mail"></a>
                            {% endif %}
                            {% if profileUser.phoneAfterPrivacySettingsApplied %}
                                <a href="tel:{{ profileUser.phoneAfterPrivacySettingsApplied }}" class="uk-icon-button uk-margin-small-right" uk-icon="receiver"></a>
                            {% endif %}
                            {% if profileUser.getLinkedinProfile %}
                                <a href="{{ profileUser.linkedinProfile }}" class="uk-icon-button uk-margin-small-right" uk-icon="linkedin" target="_blank"></a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <br /><br />

            <!-- Schools -->
            <div class="uk-card uk-card-default">
                <div class="uk-card-header">
                    <div class="uk-grid-small uk-flex-middle" uk-grid>
                        <div class="uk-width-auto">
                            <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                        </div>
                        <div class="uk-width-expand">
                            <h3 class="uk-card-title uk-margin-remove-bottom">Schools I Volunteer At</h3>
                        </div>
                    </div>
                </div>
                <div class="uk-card-body">
                    {% if profileUser.schools is defined and profileUser.schools|length > 0 %}
                        <ul class="uk-list uk-list-divider">
                            {% for school in profileUser.schools %}
                                <li>{{ school.name }}</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>This user hasn't added any schools yet.</p>
                    {% endif %}
                </div>
            </div>

            <br /><br />

            <!-- Lessons -->
            <div class="uk-card uk-card-default">
                <div class="uk-card-header">
                    <div class="uk-grid-small uk-flex-middle" uk-grid>
                        <div class="uk-width-auto">
                            <i class="fa fa-book" aria-hidden="true"></i>
                        </div>
                        <div class="uk-width-expand">
                            <h3 class="uk-card-title uk-margin-remove-bottom">Lessons I Can Teach</h3>
                        </div>
                    </div>
                </div>
                <div class="uk-card-body">
                    {% if profileUser.lessonTeachables|length > 0 %}
                        <ul class="uk-list uk-list-divider">
                            {% for teachable in profileUser.lessonTeachables %}
                                <li><a class="uk-link-text" href="{{ path('lesson_view', {'id': teachable.lesson.id}) }}">{{ teachable.lesson.title }}</a></li>
                                <form method="post" action="{{ path('lesson_request_to_teach', {'lesson_id' : teachable.lesson.id, 'professional_id': teachable.user.id}) }}">
                                    <input type="hidden" name="dateOptionOne" value="08/08/2019 8:00 AM">
                                    <input type="hidden" name="dateOptionTwo" value="08/09/2019 8:00 AM">
                                    <input type="hidden" name="dateOptionThree" value="08/10/2019 8:00 AM">
                                    <input type="hidden" name="redirectUrl" value="{{ path('profile_index', {id: teachable.user.id}) }}">
                                    <button class="uk-button uk-button-primary uk-button-small">Request</button>
                                </form>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>This user hasn't added any lessons yet.</p>
                    {% endif %}
                </div>
            </div>


        </div>
        <div class="uk-width-1-3@m uk-width-1-1">
            <!-- Quick Links -->
            <div class="quick-links-wrapper">
                <div class="uk-card uk-card-default">
                    <div class="uk-card-header">
                        <div class="uk-grid-small uk-flex-middle" uk-grid>
                            <div class="uk-width-expand">
                                <h3 class="uk-card-title uk-margin-remove-bottom">My volunteer roles</h3>
                            </div>
                        </div>
                    </div>
                    <div class="uk-card-body">
                        {% if profileUser.rolesWillingToFulfill|length %}
                            <ul class="uk-list uk-list-divider">
                                {% for role in profileUser.rolesWillingToFulfill %}
                                    <li>{{ role.name }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p>This user hasn't added any roles yet.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>