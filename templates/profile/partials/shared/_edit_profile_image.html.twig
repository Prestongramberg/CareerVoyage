<div class="uk-margin uk-grid" uk-grid>
    <div class="uk-width-small">
        <img id="userThumbnailImage" src="{{ ( attribute(user, 'photo') is defined and user.photo ) ? asset(uploaded_asset(user.photoPath))|imagine_filter('squared_thumbnail_small') : asset('build/images/avatar.png') }}" uk-img/>
    </div>
    <div class="uk-width-expand">
        <div class="uk-width-1-1">
            <label>Profile Image</label>
            <div class="uk-text-meta">Upload a square image if possible.  Will auto resize to 300x300.</div>
            <div data-upload-url="{{ path('profile_photo_add', { id: user.id }) }}" data-type="image:userThumbnailImage"></div>
        </div>
    </div>
</div>
