<div>

    <div class="uk-grid-small" uk-grid>

        <div class="sort-handle-wrap uk-width-1-3">
            <span uk-icon="move" class="sort-entity-col-handle"></span>
        </div>

        <div class="form-fields-wrap uk-width-1-3">
            <div class="input-group js-selected-column-data">
                {{ form_widget(form.name, {'attr': {'class': 'col-name uk-input'}}) }}
                {{ form_widget(form.defaultName, {'attr': {'class': 'col-default-name'}}) }}
                {{ form_widget(form.field, {'attr': {'class': 'col-field'}}) }}
            </div>
        </div>

        <div class="remove-button-wrap uk-width-1-3">
            <a href="" style="float: right" class="uk-icon-button js-report-remove-column-button" uk-icon="minus-circle" title="Remove column from report."></a>
        </div>

    </div>
</div>


