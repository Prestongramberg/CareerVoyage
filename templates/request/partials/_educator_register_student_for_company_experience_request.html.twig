<li id="ersfcer_{{ request.id }}">
    {% if request.wasCreatedByUser(user) %}
        <a class="uk-accordion-title" href="#">Request to register student for company experience. bwap</a>
        <div class="uk-accordion-content">
            <table class="uk-table uk-table-small uk-table-divider">
                <tbody>
                <tr>
                    <td>Request type</td>
                    <td>Register students for company experience.</td>
                </tr>
                <tr>
                    <td>Experience title</td>
                    <td>{{ request.companyExperience.title }}</td>
                </tr>
                <tr>
                    <td>Students</td>
                    <td>
                        <ul>
                            <li>
                                {% if request.studentUser %}
                                    {{ request.studentUser.fullName }}
                                {% endif %}
                            </li>
                        </ul>
                    </td>
                </tr>
                <tr>
                    <td>Sent to</td>
                    {% if request.needsApprovalBy is not null %}
                        <td>{{ request.needsApprovalBy.fullName }} | {{ request.needsApprovalBy.email }}</td>
                    {% endif %}
                </tr>
                <tr>
                    <td>Status</td>
                    <td>
                        <span class="uk-label">
                            {{ render_request_status_text( request ) }}
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>Created On</td>
                    <td>{{ request.createdAt|date("m/d/Y h:i:s A") }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {% else %}
        {% if request.studentHasSeen == false %}
            <a class="uk-accordion-title toggle-has-seen" href="#" data-id="{{ request.id }}" data-approved="{{ request.approved }}"><small><em class="fa fa-circle"></em></small> Request to register students for company experience.</a>
        {% else %}
            <a class="uk-accordion-title" href="#">Request to register students for company experience.</a>
        {% endif %}
        <div class="uk-accordion-content">
            <p>{{ request.createdBy.firstName }} {{ request.createdBy.lastName }} has requested that you register the following students
                to the experience: {{ request.companyExperience.title }}</p>
            <p>Created On {{ request.createdAt|date("m/d/Y h:i:s A") }}</p>
            <ul>
                <li>
                    {% if request.studentUser %}
                        {{ request.studentUser.fullName }}
                    {% endif %}
                </li>
            </ul>
            {% if render_request_status_text( request ) == "Pending" %}
                <form method="post" class="uk-inline ersfcer-approval" action="{{ path('approve_request', {'id': request.id}) }}">
                    <input class="uk-label uk-label-success" type="submit" value="Approve">
                    <input type="hidden" name="request" value="{{ request.id }}">
                    <input type="hidden" name="element" value="ersfcer_{{ request.id }}">
                </form>
                <form method="post" class="uk-inline ersfcer-denial" action="{{ path('deny_request', {'id': request.id}) }}">
                    <input class="uk-label uk-label-danger" type="submit" value="Deny">
                    <input type="hidden" name="request" value="{{ request.id }}">
                    <input type="hidden" name="element" value="ersfcer_{{ request.id }}">
                </form>
            {% endif %}
            {% if user_can_chat_with_user( user, request.createdBy ) %}
                <button class="uk-label uk-label-success" data-message-user-id="{{ request.createdBy.id }}">Chat with {{ request.createdBy.fullName }}</button>
            {% endif %}
        </div>
    {% endif %}

</li>
