{% extends 'baseAuthenticated.html.twig' %}

{% form_theme form _self %}

{% block title %}Edit School{% endblock %}

{% block body %}
    {{ form_start(form, {attr: {'novalidate' : 'novalidate'}}) }}
    {% if form_errors(form) %}
        {{ form_errors(form) }}
    {% endif %}
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    <div class="uk-margin">
        {{ form_label(form.street, 'Street*') }}
        {{ form_widget(form.street, {'attr': {'class': 'uk-input' ~ ( form_errors(form.street) ? ' uk-form-danger' : '' ) }}) }}
        {{ form_errors(form.street) }}
    </div>
    <div class="uk-margin">
        {{ form_label(form.city, 'City*') }}
        {{ form_widget(form.city, {'attr': {'class': 'uk-input' ~ ( form_errors(form.city) ? ' uk-form-danger' : '' ) }}) }}
        {{ form_errors(form.city) }}
    </div>
    <div class="uk-margin">
        {{ form_label(form.state, 'State*') }}
        {{ form_widget(form.state, {'attr': {'class': 'uk-select' ~ ( form_errors(form.state) ? ' uk-form-danger' : '' ) }}) }}
        {{ form_errors(form.state) }}
    </div>
    <div class="uk-margin">
        {{ form_label(form.zipcode, 'Zip*') }}
        {{ form_widget(form.zipcode, {'attr': {'class': 'uk-input' ~ ( form_errors(form.zipcode) ? ' uk-form-danger' : '' ) }}) }}
        {{ form_errors(form.zipcode) }}
    </div>
    {{ form_row(form.overviewAndBackground) }}

    <h2>School Videos (Follow api video routes in SchoolController)</h2>
    {% if school.schoolVideos|length > 0 %}
        <div class="uk-margin">
            <h4>Current Videos</h4>
            <div class="uk-child-width-1-3@m" uk-grid="masonry: true" uk-lightbox="animation: slide; video-autoplay: 1">
                {% for video in school.schoolVideos %}
                    <div>
                        <a class="uk-inline" href="https://www.youtube.com/watch?v={{ video.videoId }}">
                            <img src="http://i.ytimg.com/vi/{{ video.videoId }}/hqdefault.jpg" alt="">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <h2>School Photos (Follow api photos routes in SchoolController)</h2>
    {% if school.schoolPhotos|length > 0 %}
        <h4>School Photos</h4>
        {% for schoolPhoto in school.schoolPhotos %}
            <button class="js-removePhoto" type="button" data-remove="{{ url('school_photo_remove', {'id': schoolPhoto.id}) }}" uk-close></button>
            <img src="{{ asset(uploaded_asset(schoolPhoto.path))|imagine_filter('squared_thumbnail_small') }}" />
        {% endfor %}
    {% endif %}

    <input type="submit" value="Save">
    {{ form_end(form) }}
{% endblock %}
