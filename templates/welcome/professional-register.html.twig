            {{ form_errors(professionalRegistrationForm.password.second) }}
        </div>
        <div class="uk-margin">
            <label><input class="uk-checkbox" type="checkbox"> I agree to the <a href="#">Privacy Policy</a> and <a href="#">User Agreement</a>.</label>
        </div>
        <div class="uk-margin">
            <button class="uk-button uk-button-primary uk-width-1-1">Register Account</button>
        </div>
    </fieldset>
    <input type="hidden" name="formType" value="professionalRegistrationForm">

{{ form_end(professionalRegistrationForm) }}